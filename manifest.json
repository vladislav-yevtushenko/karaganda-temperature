{
  "name": "Karaganda temperature",
  "manifest_version": 2,
  "version": "1.0.4",
  "description": "Shows thermometer and temperature in Karaganda. Provider www.meteoclub.kz",
  
  "permissions": [
  "tabs","http://www.meteoclub.kz/*", "background"
  ],
  
  "background": {
	
	"page": "html/background.html",
	"persistent": true
  	},
  

  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_action": {
	
	"default_title": "Karaganda temperature",
	"default_popup": "html/popup.htm",
	"default_icon": "icons/icon19.png"
    
  }	
}